<form action="/api/users" method="POST" id="new_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text3">Nombre:</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="David Villanueva">
        </div>
        <div class="form-group">
            <label for="email" class="text3">Correo:</label>
            <input type="text" name="email" value="" placeholder="example@example.com">
        </div>
        <div class="form-group">
            <label for="gender" class="text3">Sexo:</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="male">
                <label for="radio-2" class="radio-label">Hombre</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="gender" value="female">
                <label for="radio-3" class="radio-label">Mujer</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text1 update">Agregar +</button>
        </div>
    </div>
</form>